{% extends 'user_base.html.twig' %}

{% block title %}Mon Profil
{% endblock %}

{% block content %}
	{% if app.user.client %}
		{% set userId = app.user.client.id %}
		{% set userLastname = app.user.client.lastname %}
		{% set userFirstname = app.user.client.firstname %}
		{% set userAllergies = app.user.client.allergies %}
		{% set userPhone = app.user.client.phone %}
		{% set userNumber = app.user.client.number %}
	{% else %}
		{% set userId = null %}
		{% set userLastname = null %}
		{% set userFirstname = null %}
		{% set userAllergies = null %}
		{% set userPhone = null %}
		{% set userNumber = null %}
	{% endif %}
	{% set ProfilCSRFToken = csrf_token('profil') %}

	<div {{ react_component('UserProfil', {userId, userLastname, userFirstname, userAllergies, userPhone, userNumber,ProfilCSRFToken } )}}></div>
{% endblock %}
