    {% endfor %}

    
    {{ form_start(requestForm) }}
        {{ form_row(requestForm.email, {
            label : "Votre e-mail: "
        }) }}
        <div>
            <small>
                Entrez votre adresse e-mail et nous vous enverrons un lien pour cr√©er un nouveau mot de passe
            </small>
        </div>

        <button class="submit_button">Envoyer l'e-mail</button>
    {{ form_end(requestForm) }}
</div>
{% endblock %}
